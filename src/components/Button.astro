---
export interface ButtonProps {
  variant?: 'primary' | 'secondary';
  link?: string;
  icon?: string;
  children?: any;
}

const variants = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
};

const icons = {
  'right-arrow': '→',
  'add-document': '+',
  'external': '↗',
};
---

<a href={link} class={variants[variant] || 'btn'}>
  {icon && <span class="icon">{icons[icon]}</span>}
  {children}
</a>

<style>
  .btn {
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
  }
  .btn-primary {
    background-color: #007bff;
    color: white;
  }
  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }
  .icon {
    margin-right: 5px;
  }
</style>

